{
  "name": "@siri1410/auth",
  "version": "0.1.0",
  "description": "Authentication abstraction for Firebase, Auth0, and custom providers",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./firebase": {
      "import": "./dist/adapters/firebase.mjs",
      "require": "./dist/adapters/firebase.js",
      "types": "./dist/adapters/firebase.d.ts"
    },
    "./auth0": {
      "import": "./dist/adapters/auth0.mjs",
      "require": "./dist/adapters/auth0.js",
      "types": "./dist/adapters/auth0.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/adapters/*.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@siri1410/core": "workspace:*"
  },
  "peerDependencies": {
    "firebase": ">=10.0.0",
    "@auth0/auth0-spa-js": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "firebase": { "optional": true },
    "@auth0/auth0-spa-js": { "optional": true }
  },
  "devDependencies": {
    "firebase": "^10.0.0",
    "@auth0/auth0-spa-js": "^2.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "keywords": ["sdods", "auth", "authentication", "firebase", "auth0"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/siri1410/sdods.git",
    "directory": "packages/auth"
  },
  "publishConfig": {
    "access": "public"
  }
}
